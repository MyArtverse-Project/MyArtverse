{
  "name": "myfursona",
  "private": true,
  "version": "0.0.0",
  "license": "Apache-2.0",
  "type": "module",
  "homepage": "https://github.com/MyFursona-Project/MyFursona",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "dotenv -- turbo dev --filter=website --no-daemon",
    "dev:widget": "dotenv -- turbo dev --filter=widget --no-daemon",
    "build": "turbo build --filter=website",
    "build:all": "turbo build",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@turbo/gen": "^1.10.13",
    "concurrently": "^8.2.1",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "turbo": "^1.11.2"
  },
  "lint-staged": {
    "apps/**": "yarn prettier --write .",
    "packages/**": "yarn prettier --write .",
    "*.md": "yarn prettier --write ."
  },
  "engines": {
    "node": ">= 18.0.0",
    "npm": ">= 8.0.0"
  }
}
