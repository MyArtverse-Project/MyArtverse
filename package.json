{
  "name": "myfursona",
  "private": true,
  "version": "0.0.0",
  "license": "Apache-2.0",
  "homepage": "https://github.com/MyFursona-Project/MyFursona",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "dotenv -- turbo dev --filter=website --no-daemon",
    "dev:client": "dotenv -- cd apps/client && yarn tauri dev",
    "build": "turbo build --filter=website",
    "build:client": "cd apps/client && yarn tauri build",
    "build:all": "concurrently -n web,desktop \"yarn turbo build\" \"yarn build:client\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@turbo/gen": "^1.10.13",
    "concurrently": "^8.2.1",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "turbo": "^1.10.13"
  },
  "lint-staged": {
    "apps/**": "yarn prettier --write .",
    "packages/**": "yarn prettier --write .",
    "*.md": "yarn prettier --write ."
  },
  "engines": {
    "node": ">= 18.0.0",
    "npm": ">= 8.0.0"
  }
}
