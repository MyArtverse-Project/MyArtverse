{
  "name": "myfursona",
  "private": true,
  "version": "0.0.0",
  "license": "Apache-2.0",
  "type": "module",
  "homepage": "https://github.com/MyFursona-Project/MyFursona",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "dotenv -- turbo dev --filter=website --no-daemon",
    "dev:widget": "dotenv -- turbo dev --filter=widget --no-daemon",
    "build": "turbo build --filter=website",
    "build:all": "turbo build",
    "format:check": "prettier --check \"**/*.{json,js,cjs,mjs,ts,tsx,md,mdx}\"",
    "format:write": "prettier --write \"**/*.{json,js,cjs,mjs,ts,tsx,md,mdx}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@turbo/gen": "latest",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "husky": "^9.0.0",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "turbo": "latest"
  },
  "lint-staged": {
    "apps/**": "npm run format:write",
    "packages/**": "npm run format:write",
    "*.md": "npm run format:write"
  },
  "engines": {
    "node": ">= 18.0.0",
    "npm": ">= 8.0.0"
  }
}
